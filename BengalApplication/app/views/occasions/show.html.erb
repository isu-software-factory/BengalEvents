<% content_for(:title, "#{@occasion.name}") %>
<h1> <%= @occasion.name %> </h1>


<table>
  <thead>
  <tr>
    <td>Name</td>
    <td>Description</td>
    <td>Start Date</td>
    <td>End Date</td>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= @occasion.name %> </td>
    <td><%= @occasion.description %> </td>
    <td><%= @occasion.start_date.strftime("%Y-%m-%d") %></td>
    <td><%= @occasion.end_date.strftime("%Y-%m-%d") %></td>
  </tr>
  </tbody>
</table>

<%= render @occasion.locations %>

<% if policy(@occasion).new? %>
  <p><%= link_to "Add Location", new_occasion_location_path(@occasion, @location) %></p>
<% end %>
<br>

<h2>List of Events</h2>

<%= render @occasion.events %>
<p><%= link_to "Create an event", new_occasion_event_path(@occasion, @event) %></p>
<p><%= link_to "Home Page", occasions_path %></p>

