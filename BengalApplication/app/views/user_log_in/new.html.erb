<h1>Log In</h1>

<%=form_tag action: "new" do %>
  <div class="field">
    <%=label_tag :username %><br/>
    <%=text_field_tag :username, params[:username] %>
  </div>
  <div class="field">
    <%=label_tag :password %><br/>
    <%=password_field_tag :password %>
  </div>
  <div class="actions"><%=submit_tag "Log In" %></div>
<%end %>