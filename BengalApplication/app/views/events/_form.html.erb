<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>
<%= form_for [@occasion, @event] do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <!--  <p>-->
  <%#= f.label "Start Time" %>
  <%#= select_tag :start_time, {include_hidden: false}, multiple: true,  id: 'selectTimeSlots' %>
  <!--  </p>-->
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label "Make Ahead Item" %>
    <%= f.check_box :isMakeAhead %>
  </p>
  <p>
    <%= f.submit "Confirm", class: "button" %>
  </p>
<% end %>
