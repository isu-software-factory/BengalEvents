<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>
<%= form_for([@occasion, @event], :html => {:class => "form-horizontal center"}) do |f| %>

  <div class="form-group">
    <%= f.label :name, "Event Name:", class: "col-md-4 control-label" %>
    <div class="col-xs-2">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <!--  <p>-->
  <%#= f.label "Start Time" %>
  <%#= select_tag :start_time, {include_hidden: false}, multiple: true,  id: 'selectTimeSlots' %>
  <!--  </p>-->
  <div class="form-group">
    <%= f.label :description, "Event Description:", class: "col-md-4 control-label" %>
    <div class="col-xs-2">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :location_id, class: "col-md-4 control-label" %>
    <div class="col-xs-2">
      <%= f.collection_select :location_id, Location.order(:name), :id, :name, {:prompt => "Select a Location"}, class: "location-select form-control" %>
    </div>
  </div>
<!--  <p>-->
    <%#= f.label :location_id %>
    <%#= f.collection_select :location_id, Location.order(:name), :id, :name, {:prompt => "Select a Location"}, class: "location-select" %>
<!--  </p>-->
  <div class="form-group">
    <%= f.label :isMakeAhead, "Is this a make ahead Event?", class: "col-md-4 control-label" %>
    <div class="col-md-4">
      <%= f.check_box :isMakeAhead, class: "form-check-label" %>
    </div>
  </div>
  <div class="col-md-5 control-label">
    <%= f.submit "Confirm", class: "btn btn-default btn-primary" %>
  </div>
<% end %>
