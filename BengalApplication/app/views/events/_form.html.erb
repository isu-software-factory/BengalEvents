<%#= form_for([@occasion, @occasion.events.build]) do |f| %>
<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>
<%= form_for [@occasion, @event] do |f| %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label "Make Ahead Item" %>
    <%= f.check_box :isMakeAhead %>
    </p>
    <p>
      <%= f.submit "Confirm", class: "button" %>
    </p>
<% end %>
