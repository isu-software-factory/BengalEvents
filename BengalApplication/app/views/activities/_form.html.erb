<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>


<div class="container">
  <div class="card border-dark">
    <div class="card-header event-header">
      <div class="row">
        <div class="col-lg-6">
          <h1>Activity Information</h1>
        </div>
        <div class="col-lg-4">
          <h1>Activity Sessions</h1>
        </div>
      </div>
    </div>
    <div class="card-body bengal-body">
      <%= form_tag({controller: "activities", action: "create"}, {id: "activity-form"}) do %>

        <div class="row">
          <div class="col-lg-5 border-right">
            <div class="form-group">
              <%= label_tag "Activity Name", nil, class: "control-label" %>
              <%= text_field_tag "name1", nil, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= label_tag "Activity Description", nil, class: "control-label" %>
              <%= text_field_tag "description1", nil, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= check_box_tag "ismakeahead1" %>
              <%= label_tag "Is make ahead", nil, class: "control-label" %>
            </div>
            <div class="form-group">
              <%= check_box_tag "iscompetetion1" %>
              <%= label_tag "Is competition", nil, class: "control-label" %>
            </div>
            <div class="form-group">
              <%= label_tag "Choose Location of Activity", nil, class: "control-label" %>
              <select class="form-control locationselect" name="location1"></select>
            </div>
          </div>

          <div class="col-lg-7">
            <div class="row">
              <div class="col-lg-3">
                <%= label_tag "Start Time" %>
              </div>
              <div class="col-lg-3">
                <%= label_tag "Room" %>
              </div>
              <div class="col-lg-3">
                <%= label_tag "Capacity" %>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-3">
                  <%= text_field_tag "start_time", nil, class: "control-label form-control start_time" %>
              </div>
              <div class="col-lg-3">
                  <select class="form-control roomselect"  title="Choose Room that Session will be hosted at"></select>
              </div>
              <div class="col-lg-3">
                  <%= text_field_tag "capacity", nil, class: "control-label form-control" %>
              </div>
              <div class="col-lg-3">
                <button class="button-small glyphicon glyphicon-plus new-session" title="Add New Session" type="button"></button>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-1">
            <%= submit_tag "Confirm", class: "button-small" %>
          </div>
          <div class="col-lg-1">
            <button class="button-small glyphicon glyphicon-plus" type="button" onclick="newActivity()" title="Add New Activity"></button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

