
<%=form_for @teacher do |f| %>

  <div class="row">
    <div class="column">  <%=f.label :name, "Teacher Name" %>
    </div>
    <div class="column"> <%=f.text_field(:name )%>
    </div>
  </div>

  <div class="row">
    <div class="column"> <%=f.label :school, "School Name" %>
    </div>
    <div class="column"> <%=f.text_field(:school )%>
    </div>
  </div>

  <div class="row">
    <div class="column"> <%=f.label :chaperone_count, "Expected Number of Chaperones" %>
    </div>
    <div class="column"> <%=f.text_field(:chaperone_count )%>
    </div>
  </div>

  <div class="row">
    <div class="column"><%=f.label :student_count, "Expected Number of Students" %>
    </div>
    <div class="column"><%=f.text_field(:student_count )%>
    </div>
  </div>
  <%=f.fields_for :user do |u| %>

    <div class="row">
      <%= u.hidden_field :reset_password_token %>
      <div class="column"> <%=u.label :email %>
      </div>
      <div class="column"> <%=u.email_field :email %>
      </div>
      <div class="field">
        <%= u.label :password, "New password" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= u.password_field :password, autofocus: true, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= u.label :password_confirmation, "Confirm new password" %><br />
        <%= u.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>
  <%end %>
  <div class="actions"><%=submit_tag "Confirm", class: "button" %></div>
<%end %>


<% if @teacher.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this post from being saved:</h2>

    <ul>
      <% @teacher.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>