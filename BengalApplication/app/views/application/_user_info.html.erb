<% if signed_in? %>
  <% if controller.controller_name == "teams" %>
    <% unless params[:id] == nil %>
      <div class="team_name"><h1>Team <%= Team.find(params[:id]).name %></h1></div>
    <% end %>
  <% end %>
  <% unless (controller.action_name == "pdfshow") || (controller.action_name == "teamschedulepdf" || controller.action_name == "print_schedule") || (controller.action_name == "print_class_registrations")   %>
    <div class="dropdown menu">
      <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="glyphicon glyphicon-cog"></span>
        <%= current_user.first_name %></a>
      <div class="dropdown-menu menu-container dropdown-menu-right">
        <%# if (current_user.roles.first.role_name == "Teacher") %>
          <%#= link_to "Account Settings", edit_teacher_path(current_user), class: "dropdown-item" %>
        <%#else %>
          <%= link_to "Account Settings", edit_user_registration_path, class: "dropdown-item" %>
        <%#end %>
        <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    </div>
  <% end %>
<% end %>