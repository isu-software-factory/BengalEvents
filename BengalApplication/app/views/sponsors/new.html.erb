<h1>To Create an account fill in the information.</h1>
<% if @sponsor.errors.any? %>
  <div id="error_explanation">
    <h2>Please fix <%= pluralize(@sponsor.errors.count, "error") %> to proceed. </h2>
    <ul>
      <% @sponsor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container">
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title">Sign Up</div>
      </div>
      <div style="padding-top:30px" class="panel-body">
        <%= form_for @sponsor, class: "form-horizontal" do |f| %>

          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%= f.text_field :name, placeholder: "Full Name", class: "form-control" %>
          </div>

          <%= f.fields_for :user do |u| %>

            <div style="margin-bottom: 25px" class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
              <%= u.email_field :email, placeholder: "Email", class: "form-control" %>
            </div>

            <div style="margin-bottom: 25px" class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
              <%= u.password_field :password, placeholder: "Password", class: "form-control" %>
            </div>

            <div style="margin-bottom: 25px" class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
              <%= u.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-control" %>
            </div>

          <% end %>
          <div style="margin-top:10px" class="form-group">
            <!-- Button -->
            <div class="col-sm-12 controls">
              <%= submit_tag "Create Account", class: "btn btn-success" %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

