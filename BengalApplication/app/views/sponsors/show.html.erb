<h1>Welcome, <%= @sponsor.name %></h1>
<%= link_to "Go to Events", occasions_path %>
<h3>Occasion (<%= current_user.meta.events.count %>)</h3>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Make Ahead</th>
    <th>Location</th>
    <th>Capacity</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Created By</th>
  </tr>
  <% if current_user.meta.events.any? %>
    <tr>
      <% current_user.meta.events.each do |e| %>
        <% e.event_details.each do |d| %>
        <tr>
          <td><%= e.name %></td>
          <td> <%= e.description %></td>
          <td> <%= e.isMakeAhead %></td>
          <td><%= e.location.name %></td>
          <td> <%= d.capacity %></td>
          <td> <%= d.start_time.strftime("%F %H:%M %p") %></td>
          <td><%= d.end_time.strftime("%F %H:%M %p") %></td>
          <td><%= e.sponsor.user.email %></td>
        </tr>
      <% end %>
    <% end %>
  <% end %>
</table>
