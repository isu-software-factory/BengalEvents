<p><%= link_to user.email, user %></p>

<div>
  <%= form_for(user) do |f| %>
    <%= f.select(:role, User.roles.keys.map {|role| [role.titleize, role]}) %>
    <td>
      <button><%= f.submit 'Change Role' %></button>
    </td>
  <% end %>
</div>
<td>
  <%= link_to("Delete user", user_path(user), method: :delete, confirm: "Are you sure?") unless user == @user %>
</td>