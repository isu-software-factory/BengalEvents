<div class="container">
  <div class="row">
    <div class="col-sm">
      <div class="card border-dark mb-3">
        <div class="car-header dark-header">Team Information</div>
        <div class="card-body text-dark">
          <h2>Enter Team Name</h2>
          <%=form_for @team do |f| %>
            <%=f.text_field :name, placeholder: "Name", class: "field" %>
            <h2>Invite Members</h2>
            <div class="profile-field"><%=text_field_tag :email1, nil, placeholder: "Member Email", class: "field" %></div>
            <div class="profile-field"><%=text_field_tag :email2, nil, placeholder: "Member Email", class: "field" %></div>
            <div class="profile-field"><%=text_field_tag :email3, nil, placeholder: "Member Email", class: "field" %></div>
            <div class="profile-field"><%=text_field_tag :email4, nil, placeholder: "Member Email", class: "field"%></div>
            <div><%=f.submit "Create", class:"button full_button" %></div>
          <%end %>
        </div>
      </div>
    </div>
  </div>
</div>




