<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>
<div>
  <% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
      <p><%= e %></p>
    <% end %>
  <% end %>
</div>




<div class="container">
    <% @events.each do |event| %>
    <div class="">
      <h2 class="accordian"><%= event.name %> <span class="badge badge-danger">
        Starts at <%= event.start_date.strftime("%d/%m/%Y") %></span></h2>
      <div class="row">
        <div class="col-lg-12">
          <table class="table">
            <thead class="event-header">
            <tr>
              <th class="name">Name</th>
              <th>Description</th>
              <th></th>
            </tr>
            </thead>
            <% @activities.each do |e| %>
              <% if e.iscompetetion && @role == "Team" %>
                <%= render :partial => "registrations/activities", locals: {e: e, role: @role} %>
              <% elsif !e.iscompetetion && @role == "User" %>
                <%= render :partial => "registrations/activities", locals: {e: e, role: @role} %>
              <% end %>
            <% end %>
          </table>
        </div>
      </div>
      </div>
    <% end %>
    </div>

