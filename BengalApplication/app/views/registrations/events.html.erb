<div>
  <%=link_to "Home", controller: "homeroutes", action: "routes" %>
</div>
<h1>Event Time Slots</h1>


  <%@events.each do |e| %>
    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Description</th>
      </tr>
      </thead>
      <tr>
        <td><%=e.name %></td>
        <td><%=e.location %></td>
        <td><%=e.description %></td>
      </tr>
      <thead>
      <tr>
        <th>Capacity</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Register</th>
      </tr>
      </thead>
      <tbody>
      <%e.event_details.each do |ed| %>
        <tr>
          <td><%=ed.capacity %></td>
          <td><%= ed.start_time %></td>
          <td><%= ed.end_time %></td>
          <td><%=link_to "Register", controller: "registrations", action: "register", part_id: @participant, id:ed.id  %></td>
        </tr>
      <%end %>
      </tbody>
    </table>
  <%end %>
