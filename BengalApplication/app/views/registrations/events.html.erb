<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>
<div>
  <% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
      <p><%= e %></p>
    <% end %>
  <% end %>
</div>

<h1>Events</h1>
<div class="container">
  <%@events.each do |e| %>
    <div class="row">
      <div class="col-lg-8">
        <table class="table">
          <thead class="thead-dark">
          <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Status</th>
          </tr>
          </thead>
          <tbody>
            <td><%=e.name %></td>
            <td><%=e.location.name %></td>
            <td><%=check_box_tag("registered", value="0", title="Register") %> <span class="glyphicon glyphicon-remove left-indent-more"></span></td>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>
<table class="table">
  <thead class="thead-dark">
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Location</th>
    <th scope="col">Description</th>
  </tr>
  </thead>
  <tbody>
  <% @events.each do |e| %>
    <tr class="event-collapse">
      <td><%= e.name %></td>
      <td><%= e.location.name %></td>
      <td><%= e.description %></td>
    </tr>
    <tr>
      <td>
        <div id="hide_down" class="hide">
          <table class="table">
            <thead class="thead-secondary">
            <tr>
              <th scope="col">Capacity Remaining</th>
              <th scope="col">Start Time</th>
              <th scope="col">End Time</th>
              <th scope="col">Register</th>
            </tr>
            </thead>
            <tbody>
            <% e.event_details.each do |ed| %>
              <tr class="events">
                <td><%= ed.capacity_remaining %></td>
                <td><%= ed.start_time.strftime("%F %H:%M %p") %></td>
                <td><%= ed.end_time %></td>
                <td><%= button_to "Register", {controller: "registrations", action: "register", part_id: @participant_id, id: ed.id}, class: "button", id: "Register_button" %>
                  <% if ed.capacity_remaining == 0 %>
                    <%= button_to "Add to WaitList", {controller: "registrations", action: "add_to_waitlist", part_id: @participant_id, id: ed.id}, class: "button" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>





